{% extends 'base.html.twig' %}

{% block title %}Modification des informations{% endblock %}

{% block body %}
    <div class="container border border-secondary-subtle mt-5 p-3">
        <div class="row text-center my-5">
            <h1>Modification des informations</h1>
        </div>
        <div class="row justify-content-center ">
            {{ form_errors(profileForm) }}
        </div>
        <div class="row justify-content-center">
            <div class="col-md-6">
                {{ form_start(profileForm) }}
                    {{ form_row(profileForm.firstname) }}
                    {{ form_row(profileForm.lastname) }}
                    {{ form_row(profileForm.email) }}
                    {{ form_row(profileForm.oldPassword)}}
                    {{ form_row(profileForm.plainPassword, {
                        label: 'Mot de passe'
                    }) }}
                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Valider la modification</button>
                </div>
                {{ form_end(profileForm) }}
            </div>
        </div>

{% endblock %}
